<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/signupHeading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80D4FF"
        android:text="Sign Up"
        android:textAlignment="center"

        android:textSize="20sp"
        android:textColor="#ffffff"
        android:paddingTop="10dp"
        ></TextView>

    <ImageView
        android:id="@+id/imgRegister"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/to_do"
        android:layout_below="@+id/signupHeading"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/txtName"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/profile"
        android:padding="10dp"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgRegister"/>
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="380dp"
        android:padding="10dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/mail"

        android:hint="Email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtName"/>
    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/phone"
        android:padding="10dp"
        android:hint="Phone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtEmail"/>
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:drawableLeft="@drawable/password"
        android:padding="10dp"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtPhone"/>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:background="#FF0000"
        android:layout_below="@+id/txtPassword"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="Register"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/txtAlready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnRegister"
        android:text="Already have an account?">
    </TextView>
    <TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:layout_toRightOf="@+id/txtAlready"
        android:layout_below="@+id/btnRegister"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="4dp"
        android:text="Sign in."></TextView>


    <com.google.android.gms.common.SignInButton


        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/btnGoogle"
        android:layout_below="@+id/signIn"
        android:layout_centerHorizontal="true">


    </com.google.android.gms.common.SignInButton>










</RelativeLayout>